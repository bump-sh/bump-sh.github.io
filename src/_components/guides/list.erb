<guide-list>
  <% @resources.each do |resource| %>
    <a class="guide card" href="<%= resource.relative_url %>">
      <h3><%= resource.data.title %></h3>
      <% if resource.data.tags.present? %>
        <div class="tag-list">
          <% resource.data.tags.each do |tag| %>
            <span class="label" data-label-status="info"><%= tag %></span>
          <% end %>
        </div>
      <% end %>
    </a>
  <% end %>
</guide-list>
