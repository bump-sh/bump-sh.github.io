<guide-category class="<%= @css_classes %>">
  <div class="list-header">
    <h2><%= @title %></h2>
    <% if @description.present? %>
      <p><%= @description %></p>
    <% end %>
  </div>

  <%= render Guides::List.new(resources: @resources.first(3), category_name: @category_name, remaining_count: @remaining_count) %>
</guide-category>
