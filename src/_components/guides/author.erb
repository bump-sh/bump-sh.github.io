<author-card>
  <img class="author-image" src="<%= @author.image_url %>" />
  <h3><%= @author.name %></h3>
  <p><%= @author.title %></p>
  <div class="links">
    <a href="<%= "mailto:#{@author.email}" %>">
      <img src="<%= relative_url "images/icons/mail.svg" %>" />
    </a>
    <a href="<%= @author.url %>">
      <img src="<%= relative_url "images/icons/github.svg" %>" />
    </a>
  </div>
</author-card>
