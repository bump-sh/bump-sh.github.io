<guide-sidebar>
  <aside>
    <%= render Guides::Authors::List.new(authors: @authors) %>
    <hr>
    <dl>
      <dt>Posted in</dt>
      <dd><a class="label" href="<%= relative_url guide_category_url(@category) %>"><%= @category %></a></dd>
      <% if @tags.present? %>
        <dt>Tags</dt>
        <dd><%= render Guides::Taglist.new(tags: @tags) %></dd>
      <% end %>
      <dt>Last update</dt>
      <dd><%= @update %></dd>
    </dl>
  <%= render Shared::EditOnGithub.new(relative_path: @relative_path) %>
  </aside>
</guide-sidebar>
